using System;
using System.Text;
{
    public class Program
    {
        public static void Main(string[] args)
        {
            Console.WriteLine("Unencrypted Input:");
            string originalText = Console.ReadLine();
            int shift = 5;

            Console.WriteLine($"Original Text: {originalText}");
            Console.WriteLine($"Shift Key: {shift}");
            Console.WriteLine(new string('-', 20)); //разделител

            //encryption
            // Този код сега ще работи, защото CaesarCipher е в същия файл
            string encryptedText = CaesarCipher.Encrypt(originalText, shift);
            Console.WriteLine($"Шифриран текст: {encryptedText}");

            //decryption
            string decryptedText = CaesarCipher.Decrypt(encryptedText, shift);
            Console.WriteLine($"Дешифриран текст: {decryptedText}");

            Console.WriteLine(new string('-', 20));

            if (originalText == decryptedText)
            {
                Console.WriteLine("Success!");
            }
            else
            {
                Console.WriteLine("Error!");
            }
        }
    }

    public class CaesarCipher
    {
        public static string Encrypt(string text, int shift)
        {
            StringBuilder encryptedText = new StringBuilder();

            foreach (char c in text)
            {
                // 1. Проверяваме дали символът е буква
                if (char.IsLetter(c))
                {
                    char baseChar = char.IsUpper(c) ? 'A' : 'a';

                    int newCharIndex = (c - baseChar + shift) % 26;
                    
                    encryptedText.Append((char)(baseChar + newCharIndex));
                }
                else
                {
                    encryptedText.Append(c);
                }
            }

            return encryptedText.ToString();
        }

        public static string Decrypt(string text, int shift)
        {
            int decryptShift = 26 - (shift % 26);
            
            return Encrypt(text, decryptShift);
        }
    }
}
